{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Next.js",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/web",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Debug Prisma Studio",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/db/node_modules/.bin/prisma",
      "args": ["studio"],
      "cwd": "${workspaceFolder}/packages/db",
      "console": "integratedTerminal"
    }
  ]
}
