# packages/db/.env
# 이 파일은 Prisma 데이터베이스 연결을 위한 것입니다.

# PostgreSQL Database connection for Prisma
# Docker Compose에서 실행되는 PostgreSQL 컨테이너에 연결
# 실제 사용 시: DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/mydb"
DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/mydb"

# Prisma 설정
# 개발 환경에서 스키마 변경 시 자동 동기화
PRISMA_GENERATE_DATAPROXY=true

# 데이터베이스 연결 풀 설정
# 프로덕션 환경에서 성능 최적화를 위한 설정
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20

# NextAuth.js Configuration
# 인증 시스템을 위한 설정 (apps/web/.env.local과 동일하게 설정)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# OAuth Provider Configuration
# Google OAuth 설정 (실제 값으로 변경 필요)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth 설정 (실제 값으로 변경 필요)
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# 데이터베이스 백업 설정 (선택사항)
# 자동 백업을 위한 설정
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # 매일 새벽 2시

# 개발 환경 설정
NODE_ENV=development