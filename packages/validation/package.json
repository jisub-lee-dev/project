{
  "name": "@repo/validation",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Shared validation schemas and form utilities",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts",
      "default": "./index.ts"
    },
    "./schemas/*": {
      "types": "./src/schemas/*.ts",
      "import": "./src/schemas/*",
      "default": "./src/schemas/*"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0"
  }
}
