{
  "name": "@repo/utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Shared utility functions and helpers",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts",
      "default": "./index.ts"
    },
    "./env": {
      "types": "./src/env.ts",
      "import": "./src/env.ts",
      "default": "./src/env.ts"
    },
    "./date": {
      "types": "./src/date.ts",
      "import": "./src/date.ts",
      "default": "./src/date.ts"
    },
    "./string": {
      "types": "./src/string.ts",
      "import": "./src/string.ts",
      "default": "./src/string.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/validation": "workspace:*",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "decimal.js": "^10.4.3",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.4",
    "query-string": "^8.1.0",
    "url-parse": "^1.5.10",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/crypto-js": "^4.2.1",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.8",
    "eslint": "^8.56.0"
  }
}
