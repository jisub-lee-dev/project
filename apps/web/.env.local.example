# apps/web/.env.local
# 이 파일은 Next.js 웹 애플리케이션을 위한 환경 변수입니다.

# NextAuth.js App-specific environment variables
# 이 URL은 애플리케이션의 기본 URL이어야 합니다.
# 개발 환경에서는 보통 http://localhost:3000입니다.
NEXTAUTH_URL=http://localhost:3000

# 토큰, 쿠키, 세션을 서명하고 암호화하기 위한 시크릿입니다.
# 다음 명령어로 새로운 시크릿을 생성할 수 있습니다:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# 중요: 이것은 길고 무작위한 문자열이어야 합니다. 프로덕션에서는 이 예시 값을 사용하지 마세요.
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# OAuth Provider Configuration
# Google OAuth 설정 (실제 값으로 변경 필요)
# Google Cloud Console에서 OAuth 2.0 클라이언트 ID를 생성하여 설정하세요.
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth 설정 (실제 값으로 변경 필요)
# GitHub Developer Settings에서 OAuth App을 생성하여 설정하세요.
# https://github.com/settings/developers
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Next.js 설정
# 개발 환경에서 디버깅을 위한 설정
NEXT_TELEMETRY_DISABLED=1

# 애플리케이션 설정
# 앱별 커스텀 설정
APP_NAME="Todo Manager"
APP_VERSION="1.0.0"
APP_ENVIRONMENT="development"

# API 설정
# 외부 API 키나 엔드포인트 설정
API_BASE_URL="http://localhost:3000/api"
API_TIMEOUT=10000

# 로깅 설정
# 애플리케이션 로깅 레벨
LOG_LEVEL="info"
ENABLE_DEBUG_LOGS=true

# 성능 모니터링 (선택사항)
# 성능 추적을 위한 설정
ENABLE_PERFORMANCE_MONITORING=false
# SENTRY_DSN=your-sentry-dsn-here

# 개발 환경 설정
NODE_ENV=development
